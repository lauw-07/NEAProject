<section id="leftSideBar" class="child">
    <div class="strategies-title">
        <p>Popular Indicators</p>
    </div>

    <div class="strategies">
        @foreach (string strat in _popularTradingStrategies) {
            <div class="strategy" @onclick="() => SelectStrategy(strat)">@strat</div>
        }
    </div>

    <div class="popout-menu">
        <a href="#">
            <span>See More</span>
            <span class="e-icons e-chevron-right"></span>
        </a>
        <div class="menu-content">
            @foreach (string strat in _extraTradingStrategies) {
                <div class="strategy" @onclick="() => SelectStrategy(strat)">@strat</div>
            }
        </div>
    </div>

</section>

